{
  "name": "Form Filler",
  "short_name": "FF",
  "version": "1.1",
  "manifest_version" : 2,
  "description": "Please set your email address and other details in this extension's options",
  "background" : {
    "scripts" : [
      "jquery.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js" : ["jquery.js"]
  }],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_icon": "logo128.png"
  },
  "icons": { "16": "logo16.png",
           "48": "logo48.png",
          "128": "logo128.png" },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "chrome_style": true
  }
}
